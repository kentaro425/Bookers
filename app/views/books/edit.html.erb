<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<div>
  <%= f.submit 'Update Book' %>
</div>
  <span>
   <%= link_to "show", book_path(@book.id) %>
   |
   <%= link_to "Back", '/books' %>
  </span>

<% end %>